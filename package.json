{
	"name": "@wcpos/app-electron",
	"description": "Electron app for WooCommerce POS",
	"private": true,
	"author": "kilbot <paul@kilbot.com>",
	"version": "1.0.0",
	"scripts": {
		"start": "expo-electron start",
		"build": "yarn electron-webpack",
		"package": "yarn build && yarn electron-builder --dir -c.compression=store -c.mac.identity=null"
	},
	"eslintConfig": {
		"extends": "@wcpos/eslint-config"
	},
	"resolutions": {
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"react-native": "0.64.3"
	},
	"browserslist": {
		"production": [
			"last 1 electron version"
		],
		"development": [
			"last 1 electron version"
		]
	},
	"build": {
		"appId": "com.wcpos.electron",
		"productName": "WooCommerce POS",
		"nsis": {
			"deleteAppDataOnUninstall": true
		},
		"extraMetadata": {
			"main": "main.js"
		},
		"files": [
			{
				"from": "dist/main/",
				"to": "./",
				"filter": [
					"**/*"
				]
			},
			{
				"from": "dist/renderer",
				"to": "./",
				"filter": [
					"**/*"
				]
			},
			"package.json",
			"**/node_modules/**/*"
		]
	},
	"dependencies": {
		"@react-native-community/netinfo": "8.2.0",
		"@wcpos/core": "*",
		"expo": "44.0.6",
		"expo-status-bar": "1.2.0",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"react-native": "0.64.3",
		"react-native-get-random-values": "1.7.2",
		"react-native-pager-view": "5.4.15",
		"react-native-reanimated": "2.7.0",
		"react-native-safe-area-context": "4.2.4",
		"react-native-screens": "3.13.1",
		"react-native-svg": "12.3.0",
		"react-native-web": "0.17.7"
	},
	"devDependencies": {
		"@babel/core": "7.17.9",
		"@expo/electron-adapter": "0.0.55",
		"@expo/webpack-config": "0.16.20",
		"@svgr/webpack": "5.5.0",
		"@types/react": "17.0.44",
		"@types/react-native": "0.67.4",
		"@wcpos/babel-preset-expo": "*",
		"@wcpos/eslint-config": "*",
		"electron": "18.0.3",
		"electron-builder": "^23.0.4",
		"react-native-svg-transformer": "1.0.0",
		"typescript": "4.6.3",
		"webpack": "4.46.0"
	}
}
